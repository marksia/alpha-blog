<% if @article.errors.any? %>
  <h3>There are errors preventing this article from being created.</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>  
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <form>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', size: "60x12" %>
    </div>
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    </form>
<% end %>